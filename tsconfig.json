{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"lib": [
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"outDir": "./dst",
		"sourceMap": true,
		"strict": true,
		"stripInternal": true,
		"target": "es2017",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dst",
		"node_modules"
	]
}
